<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/sw_camera_controllers"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="Show camera controllers" />

            <TextView
                android:id="@+id/tv_open_gl_version"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/sw_keyboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is showing the keyboard" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#9EDFEF"
                android:gravity="center"
                android:text="Background color"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_red_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/red" />

                <SeekBar
                    android:id="@+id/sb_red"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="0.1"
                    android:max="10"
                    android:min="0"
                    android:progress="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_green_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/green" />

                <SeekBar
                    android:id="@+id/sb_green"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"

                    android:layout_weight="0.1"
                    android:max="10"
                    android:min="0"
                    android:progress="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_blue_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blue" />

                <SeekBar
                    android:id="@+id/sb_blue"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"

                    android:layout_weight="0.1"
                    android:max="10"
                    android:min="0"
                    android:progress="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_alpha_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alpha" />

                <SeekBar
                    android:id="@+id/sb_alpha"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"

                    android:layout_weight="0.1"
                    android:max="10"
                    android:min="0"
                    android:progress="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#9EDFEF"
                android:gravity="center"
                android:text="Camera"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <!--region Camera position-->

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="Camera position"
                android:textColor="@color/category"
                android:textSize="@dimen/category_text_size"
                app:layout_constraintStart_toStartOf="@+id/gl_start"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/ll_cp_x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|clip_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <EditText
                    android:id="@+id/et_cp_x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="x"
                    android:inputType="numberDecimal|numberSigned|textNoSuggestions"></EditText>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cp_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center|clip_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toStartOf="@+id/ll_cp_x"
                app:layout_constraintTop_toBottomOf="@+id/ll_cp_x">

                <EditText
                    android:id="@+id/et_cp_y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="y"
                    android:inputType="numberDecimal|numberSigned"></EditText>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cp_z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center|clip_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toStartOf="@+id/ll_cp_y"
                app:layout_constraintTop_toBottomOf="@+id/ll_cp_y">

                <EditText
                    android:id="@+id/et_cp_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="z"
                    android:inputType="numberDecimal|numberSigned"></EditText>

            </LinearLayout>

            <!--endregion-->


            <!--region Camera position-->


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Camera point direction"
                android:textColor="@color/category"
                android:textSize="@dimen/category_text_size"
                app:layout_constraintStart_toStartOf="@+id/ll_cp_z"
                app:layout_constraintTop_toBottomOf="@+id/ll_cp_z" />

            <LinearLayout
                android:id="@+id/ll_cpoint_x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center|clip_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

                <EditText
                    android:id="@+id/et_cpoint_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="x"
                    android:inputType="numberDecimal|numberSigned"></EditText>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cpoint_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center|clip_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toStartOf="@+id/ll_cpoint_x"
                app:layout_constraintTop_toBottomOf="@+id/ll_cpoint_x">

                <EditText
                    android:id="@+id/et_cpoint_y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="y"
                    android:inputType="numberDecimal|numberSigned"></EditText>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cpoint_z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center|clip_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toStartOf="@+id/ll_cpoint_y"
                app:layout_constraintTop_toBottomOf="@+id/ll_cpoint_y">

                <EditText
                    android:id="@+id/et_cpoint_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="z"
                    android:inputType="numberDecimal|numberSigned"></EditText>

            </LinearLayout>

            <!--endregion-->

            <!--        region UP vector-->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Up Vector"
                android:textColor="@color/category"
                android:textSize="@dimen/category_text_size"
                app:layout_constraintStart_toStartOf="@+id/ll_cpoint_z"
                app:layout_constraintTop_toBottomOf="@+id/ll_cpoint_z" />


            <LinearLayout
                android:id="@+id/ll_vector_x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center|clip_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

                <EditText
                    android:id="@+id/et_vector_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="x"
                    android:inputType="numberDecimal|numberSigned"></EditText>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_vector_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center|clip_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toStartOf="@+id/ll_vector_x"
                app:layout_constraintTop_toBottomOf="@+id/ll_vector_x">

                <EditText
                    android:id="@+id/et_vector_y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="y"
                    android:inputType="numberDecimal|numberSigned"></EditText>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_vector_z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center|clip_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toStartOf="@+id/ll_vector_y"
                app:layout_constraintTop_toBottomOf="@+id/ll_vector_y">

                <EditText
                    android:id="@+id/et_vector_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="z"
                    android:inputType="numberDecimal|numberSigned"></EditText>


            </LinearLayout>

            <!--        endregion-->

            <!-- region Far vision      -->
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Far vision"
                android:textColor="@color/category"
                android:textSize="@dimen/category_text_size"
                app:layout_constraintStart_toStartOf="@+id/ll_vector_z"
                app:layout_constraintTop_toBottomOf="@+id/ll_vector_z" />


            <LinearLayout
                android:id="@+id/ll_far_vision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4">

                <EditText
                    android:id="@+id/et_far"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="far"
                    android:inputType="numberDecimal|numberSigned"></EditText>

            </LinearLayout>
            <!-- endregion-->
            <!-- region Near vision      -->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Near vision"
                android:textColor="@color/category"
                android:textSize="@dimen/category_text_size"
                app:layout_constraintStart_toStartOf="@+id/ll_far_vision"
                app:layout_constraintTop_toBottomOf="@+id/ll_far_vision" />


            <LinearLayout
                android:id="@+id/ll_near_vision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5">

                <EditText
                    android:id="@+id/et_near"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="near"
                    android:inputType="numberDecimal|numberSigned"></EditText>

            </LinearLayout>
            <!-- endregion-->
            <!-- region Near vision      -->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Fov Y"
                android:textColor="@color/category"
                android:textSize="@dimen/category_text_size"
                app:layout_constraintStart_toStartOf="@+id/ll_near_vision"
                app:layout_constraintTop_toBottomOf="@+id/ll_near_vision" />


            <LinearLayout
                android:id="@+id/ll_fov_y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/gl_end"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6">

                <EditText
                    android:id="@+id/et_fov_y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="fov y"
                    android:inputType="numberDecimal|numberSigned"></EditText>

            </LinearLayout>
            <!-- endregion-->

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>